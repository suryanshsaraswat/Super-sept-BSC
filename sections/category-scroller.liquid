<style>
  .collection-inner {
    scroll-snap-type: x mandatory;
    display: flex;
    gap: 20px;
    justify-content: flex-start;
    overflow-x: scroll;
    scroll-snap-type: x mandatory;
    scroll-padding: 20px;
    width: 100%;
    padding: 20px;
    transition: 0.4s;
    padding-top:30px;
}
  .collection-img{flex:28% 0 0;position:relative}
  .collection-img img {
    border-radius: 30px;
    border: 1.5px solid #f00;
    position:relative;
}
  .container-collection h2 {
    font-size: 30px;
    margin-bottom: 0;
    font-weight: 600;
    text-align: center;
}
  img.topi {
    border: none;
    border-radius:0px;
    position: absolute;
    z-index: 2;
    top: -27px;
    left: -55px;
}
  @media(max-width:450px){
    .collection-img{flex:56% 0 0;}
    img.topi {
    width: 60px;
    height: 60px;
    top: -17px;
    left: -29px;

    .container-collection h2 {
    font-size: 21px;
}
  }
</style>
<div class="container-collection">
  <h2>{{ section.settings.collection_heading }}</h2>
  <div class="collection-inner">
    {% for block in section.blocks %}
      <div class="collection-img coll-img-{{ forloop.index }}">
        {% if block.settings.collection_img != blank %}
        <a href="{{ block.settings.collection_url }}">
          <img src="https://cdn.shopify.com/s/files/1/0459/6563/9834/files/OBJECTS_2.png?v=1702361257" class="topi topi{{ forloop.index }}" width="100px" height="100px">  
          <img src="{{ block.settings.collection_img | img_url:'master' }}" width="100%" height="100%" alt={{ block.settings.collection_img.alt }}>
        </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Scrolling Category list",
    "settings": [
      {
        "type":"text",
        "id":"collection_heading",
        "label":"Enter Section Heading"
      }
    ],
    "blocks":[
      {
        "name":"collection block",
        "type":"image",
        "settings":[
          {
            "type":"image_picker",
            "id":"collection_img",
            "label":"select collection image"
          },
          {
            "type":"url",
            "id":"collection_url",
            "label":"Select collection URL"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"Scrolling Category List"
      }
    ]
  }
{% endschema %}