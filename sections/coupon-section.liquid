<style></style>
<div class="coupon-container">
  <div class="coupon-main">
    <div class="coupon-div">
      {% for block in section.blocks %}
        {% if block.settings.coupon_name %}
          <div class="coupon-inner">
            <div class="coupon-left">
              <div class="coupon-name">
              <h2>{{ block.settings.coupon_name }}</h2>
            </div>
            {% if block.settings.coupon_desc %}
              <div class="coupon-desc">
                <p>{{ block.settings.coupon_desc }}</p> 
              </div>
            {% endif %}
          <div class="terms-of-use">
            <a href="#" id="terms-{{ forloop.index }}" class="term">Terms of Use</a>
          </div>
          </div>
            <div class="coupon-right">
              <img src="{{ block.settings.pr_img | img_url:"400x" }}" alt="{{ block.settings.pr_img.alt }}" width="100%" height="100%">
            </div>
            </div>
          <div class="termss" id="termss-{{ forloop.index }}">
          {{ block.settings.terms_of_use }}
          </div>
      {% endif %}
        
      {% endfor %}
    </div>
  </div>
</div>
<script></script>
{% schema %}
  {
    "name": "Coupons",
    "settings": [],
    "blocks":[
      {
        "name":"coupon block",
        "type":"testimonial",
        "settings":[
          {
            "type":"text",
            "id":"coupon_name",
            "label":"Enter Coupon Name"
          },
          {
            "type":"text",
            "id":"coupon_desc",
            "label":"Enter Coupon Desceription if any"
          },
          {
            "type":"text",
            "id":"coupon_discount",
            "label":"Enter coupon Defnition"
          },
          {
            "type":"richtext",
            "id":"terms_of_use",
            "label":"Enter terms of Use if any"
          },
          {
            "type":"image_picker",
            "id":"pr_img",
            "label":"Select Image to show"
          }
        ]
      }
    ],
    "presets": [
      {
        "name":"Coupon Section"
      }
    ]
  }
{% endschema %}

