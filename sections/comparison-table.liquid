                </th>
				<th class="pr-header" id="{{ section.settings.id }}">
                  <h3>{{ product_1.title }}</h3>
                  <img src="{{ product_1.featured_image | img_url:'400x' }}" width="200" height="200">
                </th>
				<th class="pr-header" id="{{ section.settings.id }}">
