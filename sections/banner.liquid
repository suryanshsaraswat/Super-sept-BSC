<div class="Container">
 <div class="bannern">
    {%- for block in section.blocks -%}
          {% if block.settings.img != blank  %}<div class="x1x">
            {% if block.settings.link != blank  %}
              <a href="{{ block.settings.link }}"> <img src="{{ block.settings.img | img_url: '900x' }}" class="desktop_aplus">
              <img src="{{ block.setting.img_mob | img_url:'900x' }}" class="mobile_aplus"></a>
              {% else %}
               <img src="{{ block.settings.img | img_url: '900x' }}" class="desktop_aplus">
              <img src="{{ block.settings.img_mob  | img_url:'900x'}}" class="mobile_aplus">
              {% endif %}
            
          </div>{% endif %}
    {%- endfor -%}
        </div>
</div>

{% schema %}
  {
    
"presets": [
    {
      "category": "Collection",
      "name": "Banner",
      "settings": {}
      
    }
  ],
"blocks": [
            {
			  "type": "testimonial",
              "name": "Blocks",
              "settings": [
                
                {
                  "type": "image_picker",
                  "id": "img",
                  "label": "Image"
                },
                {
                  "type": "url",
                  "id": "link",
                  "label": "Link"
                }
				
		]
            }
          ]
  }
{% endschema %}