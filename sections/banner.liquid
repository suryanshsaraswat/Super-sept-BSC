<style>
img.desktop_aplus{display:block}
  img.mobile_aplus{display:none}
  @media(max-width:450px){
    img.desktop_aplus{display:none}
  img.mobile_aplus{display:block}
  }
</style>
<div class="Container">
 <div class="bannern">
    {%- for block in section.blocks -%}
          {% if block.settings.img != blank  %}<div class="x1x">
            {% if block.settings.link != blank  %}
              <a href="{{ block.settings.link }}"> <img src="{{ block.settings.img | img_url: '900x' }}" width="100%" height="100%" class="desktop_aplus" alt="{{ block.settings.img.alt }}">
              <img src="{{ block.setting.img_mob | img_url:'900x' }}" width="100%" height="100%" alt="{{ block.settings.img_mob.alt }}" class="mobile_aplus"></a>
              {% else %}
               <img src="{{ block.settings.img | img_url: '900x' }}" class="desktop_aplus" width="100%" height="100%" class="desktop_aplus" alt="{{ block.settings.img.alt }}">
              <img src="{% if block.settings.img_mob != blank %}{{ block.settings.img_mob  | img_url:'900x'}}{% else %}{{ block.settings.img | img_url: '900x' }}{% endif %}" class="mobile_aplus" width="100%" height="100%" class="desktop_aplus" alt="{{ block.settings.img.alt }}">
              {% endif %}
            
          </div>{% endif %}
    {%- endfor -%}
        </div>
</div>

{% schema %}
  {
    
"presets": [
    {
      "category": "Collection",
      "name": "Banner",
      "settings": {}
      
    }
  ],
"blocks": [
            {
			  "type": "testimonial",
              "name": "Blocks",
              "settings": [
                
                {
                  "type": "image_picker",
                  "id": "img",
                  "label": "Image"
                },
                {
                  "type": "image_picker",
                  "id": "img_mob",
                  "label": "Mobile Image"
                },
                {
                  "type": "url",
                  "id": "link",
                  "label": "Link"
                }
				
		]
            }
          ]
  }
{% endschema %}