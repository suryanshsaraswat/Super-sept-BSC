{% if product.metafields.custom.desktop_video != blank %}
  <style>
  .desk-video {display: block;max-width: 100%;margin: 0 auto;padding: 0 80px;}
    .mob-video{display:none}
@media(max-width:450px){
  .desk-video {display:none}
  .mob-video{display:block;max-width: 100%;padding: 0 18px;}
}
  </style>
<div class="pro-video">
  <div class="desk-video">
    <video class="video-desk"width="100%" height="100%" autoplay muted playsinline>
      <source src="{{ product.metafields.custom.desktop_video }}" type="video/mp4">
    </video>
  </div>
  <div class="mob-video">
    <video class="video-mob"width="100%" height="100%" autoplay muted playsinline>
      <source src="{% if product.metafields.custom.mobile_video != blank %}{{ product.metafields.custom.mobile_video }}{% else %}{{ product.metafields.custom.desktop_video }}{% endif %}" type="video/mp4">
    </video>
  </div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Product Video Section",
    "settings": [],
    "presets":[
      {
        "name":"Product Video Section"
      }
    ]
  }
{% endschema %}