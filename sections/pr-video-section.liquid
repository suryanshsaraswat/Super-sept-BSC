{% if product.metafields.custom.desktop_video != blank %}
  <style></style>
<div class="pro-video">
  <div class="desk-video">
    <video class="video-desk"width="100%" height="100%" autoplay muted playsinline>
      <source src="{{ product.metafields.custom.desktop_video.value }}" type="video/mp4">
    </video>
  </div>
  <div class="mob-video">
    <video class="video-mob"width="100%" height="100%" autoplay muted playsinline>
      <source src="{% if product.metafields.custom.mobile_video != blank %}{{ product.metafields.custom.mobile_video.value }}{% else %}{{ product.metafields.custom.desktop_video.value }}{% endif %}" type="video/mp4">
    </video>
  </div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Product Video Section",
    "settings": [],
    "presets":[
      {
        "name":"Product Video Section"
      }
    ]
  }
{% endschema %}