<style>
  #audioPlayer{display:none}
</style>
<audio id="audioPlayer" autoplay loop>
    <source src="https://cdn.shopify.com/s/files/1/0459/6563/9834/files/We_Wish_You_a_Merry_Christmas_-_Instrumental_Christmas_Music_Trumpet_Orchestra.mp3?v=1702465420" type="audio/mp3">
    Your browser does not support the audio element.
</audio>
<script>
    const audio = document.getElementById('audioPlayer');

    audio.addEventListener('ended', function() {
        // Reset the audio and pause
        audio.currentTime = 0;
        audio.pause();
    });

    // If you want to play the audio again, you can use this function
    function playAudio() {
        audio.play();
    }
</script>