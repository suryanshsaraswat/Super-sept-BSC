<style>
  #audioPlayer{display:none}
</style>
<embed id="audioPlayer" src="https://cdn.shopify.com/s/files/1/0459/6563/9834/files/We_Wish_You_a_Merry_Christmas_-_Instrumental_Christmas_Music_Trumpet_Orchestra.mp3?v=1702465420" autostart="true" loop="false" width="0" height="0">
<script>
    const audio = document.getElementById('audioPlayer');

    audio.addEventListener('ended', function() {
        // Reset the audio and pause
        audio.currentTime = 0;
        audio.pause();
    });

    // If you want to play the audio again, you can use this function
    function playAudio() {
        audio.play();
    }
</script>