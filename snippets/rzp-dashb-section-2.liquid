<script>
  document.addEventListener("DOMContentLoaded", function() {
    const counter = document.getElementById("number-rzor");
    const target = 1200;
    const duration = 3000;
    const interval = 20;
    const step = (target / duration) * interval;

    let currentCount = 0;

    const updateCounter = () => {
      currentCount += step;
      if (currentCount >= target) {
        currentCount = target;
        clearInterval(counterInterval);
      }
      counter.textContent = Math.floor(currentCount);
    };

    const counterInterval = setInterval(updateCounter, interval);
  });
</script>
