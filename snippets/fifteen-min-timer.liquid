<div id="timer-fifteen">Deal ends in: <br>
  <span class="dotd-timer" id="minutes">00</span>m
  <span class="dotd-timer" id="seconds">00</span>s
  <span class="dotd-timer" id="milliseconds">000</span>ms
</div>
<script>
  $(document).ready(function() {

// Set the target end time to 1:15 PM IST
    var targetEndTime = new Date();
    targetEndTime.setHours(13, 15, 0, 0);

    function updateTimer() {
      var currentTime = new Date();
      var timeDifference = targetEndTime - currentTime;

      if (timeDifference <= 0) { // Timer has ended
        $("#timer-label").text("Timer Ended: ");
        $("#minutes").text("00");
        $("#seconds").text("00");
        $("#milliseconds").text("000");
      } else { // Calculate remaining time
        var minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);
        var milliseconds = timeDifference % 1000;

// Display the remaining time
        $("#minutes").text(minutes.toString().padStart(2, '0'));
        $("#seconds").text(seconds.toString().padStart(2, '0'));
        $("#milliseconds").text(milliseconds.toString().padStart(3, '0'));
      }
    }

// Update the timer every 100 milliseconds
    setInterval(updateTimer, 100);
  });
</script>
