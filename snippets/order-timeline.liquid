<script>
  // Function to mark a step as completed
  function markStepCompleted(stepNumber) {
    const steps = document.querySelectorAll('.step');
    const lines = document.querySelectorAll('.line');

// Reset all steps and lines to default color
    for (let i = 0; i < steps.length; i++) {
      steps[i].classList.remove('completed');
      lines[i].classList.remove('completed');
    }

// Mark the specified step and the lines before it as completed
    for (let i = 0; i < stepNumber; i++) {
      steps[i].classList.add('completed');
      if (i > 0) {
        lines[i - 1].classList.add('completed');
      }
    }
  }

// Check if a step has been completed and mark it accordingly
  window.addEventListener('load', () => {
    const completedStep = 3;
    markStepCompleted(completedStep);
  });
