            <div class="disc">No coupon required<sup>*</sup></div>
            
              <div class="disc">Use code:
              <span
              onclick="copyToClipboard(this)"
              class="dsc"
              id="copy-cat">BSC25</div>
              </span>
          </div>
          {% endcomment %}
        {% else %}
          <div class="display:none"></div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
